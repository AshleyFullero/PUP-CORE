      <ImageView fitHeight="83.0" fitWidth="105.0" layoutX="185.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/logo.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="-3.0" layoutY="129.0" prefHeight="89.0" prefWidth="440.0" styleClass="heading" text="PUP CORE" textFill="WHITE">
         <font>
            <Font size="53.0" />
         </font>
      </Label>
      <TextField fx:id="emailField" layoutX="92.0" layoutY="245.0" prefHeight="29.0" prefWidth="260.0" promptText="Email" styleClass="email-field">
         <padding>
            <Insets left="30.0" />
         </padding>
      </TextField>
      <ImageView fitHeight="24.0" fitWidth="12.0" layoutX="100.0" layoutY="252.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/user-solid%201.png" />
         </image>
